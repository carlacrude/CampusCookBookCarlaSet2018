
<% if flash[:notice] %>
  <div class="alert alert-danger" role="alert">
    <%=flash[:notice]%>
  </div>
<% end %>

<div class="container col-sm-6 mt-4 mb-4">
  <h3 class="mb-4">Cadastre uma nova Receita</h3>
</div>

<div class="container col-sm-6 mt-4 mb-4">
  <%= form_for @recipe, url: @recipes, html: { multipart: true } do |f| %>
  
    <div class="form-group">
      <%= f.label :title, 'TÃ­tulo' %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :recipe_type_id, 'Tipo da Receita' %>
      <%= f.collection_select :recipe_type_id, RecipeType.all, :id, :name, {}, { class: "form-control" } %>
    </div>

    <div class="form-group">
      <%= f.label :cuisine_id, 'Cozinha' %>
      <%= f.collection_select :cuisine_id, Cuisine.all, :id, :name, {}, { class: "form-control" } %>
    </div>

    <div class="form-group">
      <%= f.label :difficulty, 'Dificuldade' %>
      <%= f.text_field :difficulty, class: "form-control" %>
    </div>

    <div class="form-group form-check">
      <%= f.check_box :featured, class: "form-check-input" %>
      <%= f.label :featured, 'Marcar como destaque', class: "form-check-label" %>
    </div>

    <div class="form-group">
      <%= f.label :cook_time, 'Tempo de Preparo' %>
      <%= f.number_field :cook_time, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :ingredients, 'Ingredientes' %>
      <%= f.text_area :ingredients, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :cook_method, 'Como Preparar' %>
      <%= f.text_area :cook_method, class: "form-control" %>
    </div>

    <div class="form-group">  
      <%= f.label :recipe_image, 'Foto da Receita'%>
      <%= f.file_field :recipe_image%>
    </div>

    <div class="form-group">
      <%= f.submit 'Enviar', class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

<div class="form-group col-md-6">
  <%= link_to 'Voltar', root_path, class: 'btn btn-secondary' %>
</div>