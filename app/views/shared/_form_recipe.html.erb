
<% if @recipe.errors.any? %>
    <p>Você deve informar todos os dados da receita</p>
<% end %>

<%= form_for @recipe, url: @recipes, html: { multipart: true } do |f| %>
  
  <div class="form-group row col-md-6">
    <%= f.label :title, 'Título', class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: "form-control" %>
      </div>
  </div>

  <div class="form-group col-md-6">
      <%= f.label :recipe_type_id, 'Tipo da Receita' %>
      <%= f.collection_select :recipe_type_id, RecipeType.all, :id, :name, class: "form-control" %>
  </div>

  <div class="form-group col-md-6">
    <%= f.label :cuisine_id, 'Cozinha' %>
    <%= f.collection_select :cuisine_id, Cuisine.all, :id, :name, class: "form-control" %>
  </div>

  <div class="form-group row col-md-6">
    <%= f.label :difficulty, 'Dificuldade', class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :difficulty, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row col-md-6">
    <%= f.label :cook_time, 'Tempo de Preparo', class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10"> 
      <%= f.number_field :cook_time %>
    </div>
  </div>
  
  <div class="form-group row col-md-6">
    <%= f.label :ingredients, 'Ingredientes', class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">  
      <%= f.text_area :ingredients, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group row col-md-6">
    <%= f.label :cook_method, 'Como Preparar', class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_area :cook_method, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row col-md-6">
      <%= f.label :featured, 'Marcar como destaque', class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.check_box :featured, class: "form-control" %>
    </div>
  </div>

  <div class="form-group col-md-6">
    <%= f.file_field :recipe_image%>
  </div>

  <div class="form-group col-md-6">
    <%= f.submit 'Enviar uma receita', class: "btn btn-primary" %>
  </div>

<% end %>

<div class="form-group col-md-6">
  <%= link_to 'Voltar', root_path, class: 'btn btn-secondary' %>
</div>