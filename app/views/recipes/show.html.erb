<%if @recipe.featured? %>
    <p>Receita marcada como destaque com sucesso!</p>
<% end %>

<h1><%= @recipe.title %></h1>

<h3> Detalhes </h3>
<p><%= @recipe.recipe_type.name %></p>
<p><%= @recipe.cuisine.name %></p>
<p><%= @recipe.difficulty %></p>
<p><%= @recipe.cook_time %> minutos</p>
<p><%= @recipe.featured %></p>

<h3> Ingredientes </h3>
<p><%= @recipe.ingredients %></p>

<h3> Como Preparar </h3>
<p><%= @recipe.cook_method %></p>

<%= form_for @recipe do |f| %>
    <%= f.label :featured, 'Marcar como destaque' %>
    <%= f.check_box :featured %>
<% end %>

<%= image_tag 'star.png'%>

<%= link_to 'Editar', edit_recipe_path(@recipe.id), class: 'btn btn-primary' %>
<%= link_to 'Voltar', root_path, class: 'btn btn-secondary' %>
