<%= form_for @recipe_type do |f| %>
    <div class="form-group row col-md-6">

        <%= f.label :name, 'Nome', class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
            <%= f.text_field :name, class: "form-control" %>
