<h1>CookBook</h1>
<p>Bem-vindo ao maior livro de receitas online</p>

<%= link_to 'Home', root_path, class:'nav-link' %>
<%= link_to 'Enviar uma receita', new_recipe_path, class:'nav-link' %>
<%= link_to 'Cadastrar tipo de receita', new_recipe_type_path %>
<%= link_to 'Cadastrar cozinha', new_cuisine_path %>

<h3>Receitas destaque</h3>

<div id="recipes-featured">
    <% @recipes_featured.each do |recipe| %>
        <h1><%= link_to recipe.title,recipe %></h1>
        <%= image_tag 'star.png'%>
        <ul>
            <li><%= recipe.recipe_type.name %></li>
            <li><%= recipe.cuisine.name %></li>
            <li><%= recipe.difficulty %></li>
            <li><%= recipe.cook_time %> minutos</li>
        </ul>
    <% end %>
</div>

<h3>Outras receitas</h3>

<div id="other-recipes">
    <% @recipes.each do |recipe| %>
        <h1><%= link_to recipe.title,recipe %></h1>
        <ul>
            <li><%= recipe.recipe_type.name %></li>
            <li><%= recipe.cuisine.name %></li>
            <li><%= recipe.difficulty %></li>
            <li><%= recipe.cook_time %> minutos</li>
        </ul>
    <% end %>
</div>

